RewriteEngine On

# Forza HTTPS (eccetto ambienti locali)
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP_HOST} !^(localhost|127\.0\.0\.1|::1)$ [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Rende dinamici robots.txt e sitemap.xml senza rompere i percorsi standard
RewriteRule ^robots\.txt$ robots.php [L]
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# Pagine torneo: instrada i vecchi percorsi .html verso i nuovi file .php protetti
RewriteRule ^tornei/(.+)\.html$ /tornei/$1.php [L,QSA,NC]

# Compressione di testo (fallback a deflate se brotli non disponibile)
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# Cache lunga per asset statici versionati (immutabili)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 12 months"
  ExpiresByType application/javascript "access plus 12 months"
  ExpiresByType text/javascript "access plus 12 months"
  ExpiresByType application/json "access plus 1 month"
  ExpiresByType image/x-icon "access plus 12 months"
  ExpiresByType image/png "access plus 12 months"
  ExpiresByType image/jpeg "access plus 12 months"
  ExpiresByType image/webp "access plus 12 months"
  ExpiresByType image/svg+xml "access plus 12 months"
  ExpiresByType font/woff2 "access plus 12 months"
</IfModule>
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|png|jpe?g|webp|svg|ico|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(html|php)$">
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
  </FilesMatch>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "geolocation=(),microphone=(),camera=()"
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS
  Header set Content-Security-Policy "default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' https://www.google.com https://www.gstatic.com https://www.googletagmanager.com https://pagead2.googlesyndication.com https://googleads.g.doubleclick.net https://tpc.googlesyndication.com https://www.ezojs.com https://cmp.gatekeeperconsent.com https://the.gatekeeperconsent.com https://adservice.google.com https://www.googleadservices.com; style-src 'self' 'unsafe-inline' https:; font-src 'self' data: https:; connect-src 'self' https://www.google.com https://www.gstatic.com https://www.googletagmanager.com https://www.google-analytics.com https://region1.google-analytics.com https://*.google-analytics.com https://pagead2.googlesyndication.com https://googleads.g.doubleclick.net https://tpc.googlesyndication.com https://www.ezojs.com https://cmp.gatekeeperconsent.com https://the.gatekeeperconsent.com https://adservice.google.com https://www.googleadservices.com; frame-src 'self' https://www.google.com https://www.gstatic.com https://pagead2.googlesyndication.com https://googleads.g.doubleclick.net https://tpc.googlesyndication.com https://cmp.gatekeeperconsent.com https://the.gatekeeperconsent.com https://adservice.google.com https://www.googleadservices.com; frame-ancestors 'self'; object-src 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests"
</IfModule>

# Pagine di errore personalizzate
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php
